<%= simple_form_for @user_coffee, html: {data: {controller: "user-coffee-form"}} do |f| %>
  <div data-user-coffee-form-target="coffeeForm" class="">
    <%= render "coffees/new", coffee: @coffee %>
  </div>
  <div class="row justify-content-evenly">
    <button class="col-2 m-1 btn btn-danger" data-action="click->user-coffee-form#changeWeight" value="-250">--</button>
    <button class="col-2 m-1 btn btn-danger" data-action="click->user-coffee-form#changeWeight" value="-50">-</button>
    <div class="col-3 d-flex align-items-center">
      <%= f.input :bag_weight,
        as: :string,
        label: false,
        input_html: {
          value: '250',
          data: { target: 'user-coffee-form.weight' }
        }
      %>
    </div>
    <button class="col-2 m-1 btn btn-success" data-action="click->user-coffee-form#changeWeight" value="50">+</button>
    <button class="col-2 m-1 btn btn-success" data-action="click->user-coffee-form#changeWeight" value="250">++</button>
  </div>
  <%= f.input :price, input_html: {value: '8'} %>
  <%= f.submit %>
<% end %>
