<%= simple_fields_for coffee do |ff| %>
  <div class="row">
    <div class="col-8">
      <%= ff.input :roaster %>
    </div>
    <div class="col-4">
      <%= ff.input :roasting_date, as: :string,
            input_html: { data: { controller: "datepicker" } } %>
    </div>
  </div>
  <%= ff.input :name %>
  <div class="d-flex justify-content-center">
    <button class="btn btn-primary" data-action="click->user-coffee-form#fetchCoffee"> Find coffee batch </button>
  </div>
  <%= ff.input :process %>
  <%= ff.input :country %>
  <%= ff.input :region %>
  <%= ff.input :altitude %>
  <%= ff.association :varieties %>
<% end %>
